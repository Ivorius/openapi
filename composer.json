{
  "name": "apitte/openapi",
  "description": "Apitte OpenApi library",
  "keywords": ["api", "rest", "json", "openapi"],
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/apitte/openapi",
  "authors": [
    {
      "name": "Milan Felix Å ulc",
      "homepage": "https://f3l1x.io"
    }
  ],
  "require": {
    "php": ">= 5.6",
    "apitte/core": "^0.1.0",
    "tracy/tracy": "^2.4.9",
    "nette/di": "^2.4.10"
  },
  "require-dev": {
    "ninjify/qa": "^0.4.0",
    "ninjify/nunjuck": "^0.2.0"
  },
  "autoload": {
    "psr-4": {
      "Apitte\\OpenApi\\": "src"
    }
  },
  "scripts": {
    "qa": [
      "linter src tests",
      "codesniffer src tests"
    ],
    "tester": [
      "tester -s -p php --colors 1 -c tests/php-unix.ini tests/cases"
    ],
    "tester-coverage": [
      "tester -s -p php --colors 1 -c tests/php-unix.ini -d extension=xdebug.so --coverage ./coverage.xml --coverage-src ./src tests/cases"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
